@using Proje_OOP.Entity
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td align="center"><a href="/ProductController/UpdateProduct/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td align="center"><a href="/ProductController/DeleteProduct/@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/ProductController/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>