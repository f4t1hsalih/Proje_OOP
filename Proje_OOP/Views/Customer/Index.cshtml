@using Proje_OOP.Entity
@model List<Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteriler Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Şehri</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td align="center">@item.ID</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td align="center"><a href="/Customer/UpdateCustomer/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td align="center"><a href="/Customer/DeleteCustomer/@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer" class="btn btn-primary">Yeni Müşteri Girişi</a>
